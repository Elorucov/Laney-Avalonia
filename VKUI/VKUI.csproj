    </AvaloniaResource>
    <AvaloniaResource Update="Controls\FlipViewItem.xaml">
      <Generator>MSBuild:Compile</Generator>
    </AvaloniaResource>
    <AvaloniaResource Update="Controls\NavigationControl.xaml">
