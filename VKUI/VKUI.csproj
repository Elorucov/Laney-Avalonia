  <ItemGroup>
    <AvaloniaResource Update="Appearance\Fonts.xaml">
      <Generator>MSBuild:Compile</Generator>
    </AvaloniaResource>
    <AvaloniaResource Update="Controls\CarouselEx.xaml">
