<vkw:DialogWindow xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vkw="using:VKUI.Windows"
        xmlns:vkui="using:VKUI.Controls"
        xmlns:i18n="using:ELOR.Laney.Assets.i18n"
        mc:Ignorable="d" d:DesignWidth="360" d:DesignHeight="80"
        x:Class="ELOR.Laney.Views.Modals.VKUIWaitDialog"
        Width="360" Height="80" WindowStartupLocation="CenterOwner"
        Background="{DynamicResource VKModalCardBackgroundBrush}"
        CanResize="False">
  <Grid Margin="24" ColumnDefinitions="Auto *">
    <vkui:Spinner Width="32" Height="32" Margin="0,0,24,0"/>
    <TextBlock Grid.Column="1" VerticalAlignment="Center" Text="{x:Static i18n:Resources.wait}"/>
  </Grid>
</vkw:DialogWindow>
